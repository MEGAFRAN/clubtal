{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "indent": "off",
    "linebreak-style": "off",
    "quotes": ["error", "double"],
    "semi": ["error", "never"],
    "no-empty": "warn",
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-unused-vars": "warn",
    "no-cond-assign": ["error", "always"],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "for-direction": "off"
  },
  "env": {
    "jest": true
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "rules": {
        "quotes": "off"
      }
    }
  ]
}
