{
  "name": "clubtal",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "local-db": "json-server -p 4000 --watch db.json",
    "dev-db": "concurrently \"npm run local-db\" \"npm run dev\"",
    "build": "jest a && next build && next export",
    "start": "next start",
    "lint": "next lint --dir .",
    "lint:scss": "stylelint \"./app/**/*.scss\"",
    "lint:scss:fix": "stylelint \"./app/**/*.scss\" --fix",
    "test": "jest a",
    "test:watch": "jest a --watch",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "prepare": "husky install",
    "prettier:check": "prettier --write"
  },
  "dependencies": {
    "next": "^13.2.4",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "17.0.17",
    "@types/react": "17.0.39",
    "@types/react-color": "^3.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "concurrently": "^7.0.0",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-next": "^13.1.6",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "json-server": "^0.17.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "sass": "^1.49.7",
    "stylelint": "^15.4.0",
    "stylelint-config-standard-scss": "^8.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^4.6.0",
    "typescript": "4.5.5"
  },
  "lint-staged": {
    "*": [
      "npm run prettier:check",
      "npm run lint:scss:fix",
      "npm run lint",
      "npm run test",
      "git add"
    ]
  }
}
